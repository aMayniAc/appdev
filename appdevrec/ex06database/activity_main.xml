<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="83dp"
        android:layout_y="40dp"
        android:text="Registration Form"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="23dp"
        android:layout_y="137dp"
        android:text="Enter ID: "
        android:textSize="20sp" />

    <EditText
        android:id="@+id/id"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_x="214dp"
        android:layout_y="117dp"
        android:inputType="number"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="24dp"
        android:layout_y="183dp"
        android:text="Enter Name: "
        android:textSize="20sp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_x="212dp"
        android:layout_y="175dp"
        android:inputType="text"

        android:textSize="20sp" />

    <TextView
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_x="25dp"
        android:layout_y="228dp"
        android:text="Enter Phone number: "
        android:textSize="20sp" />

    <EditText
        android:id="@+id/pnumber"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_x="216dp"
        android:layout_y="233dp"
        android:inputType="number"
        android:textSize="20sp" />

    <Button
        android:id="@+id/Insert"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_x="40dp"
        android:layout_y="365dp"
        android:text="Insert"
        android:textSize="30dp" />

    <Button
        android:id="@+id/Delete"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_x="220dp"
        android:layout_y="365dp"
        android:text="Delete"
        android:textSize="30dp" />

    <Button
        android:id="@+id/Update"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_x="37dp"
        android:layout_y="446dp"
        android:text="Update"

        android:textSize="30dp" />

    <Button
        android:id="@+id/View"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_x="217dp"
        android:layout_y="444dp"
        android:text="View"
        android:textSize="30dp" />

    <Button
        android:id="@+id/ViewAll"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_x="106dp"
        android:layout_y="541dp"
        android:text="View All"
        android:textSize="30dp" />
</AbsoluteLayout>
